# The port your Node.js application will run on
PORT=3000

# ================================
# Database Connection Information
# ================================

# Hostname of your database server (usually 'localhost' or a container name in Docker)
DB_HOST=localhost

# Name of the database to connect to (e.g., 'product_db', 'shop_db', etc.)
DB_NAME=your_database_name

# Database username (e.g., 'root')
DB_USER=root

# Database password for the user above
DB_PASSWORD=your_password
